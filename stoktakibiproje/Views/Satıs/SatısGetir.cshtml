@model stoktakibiproje.Models.Entity.tblsatislar
@{
    ViewBag.Title = "SatısGetir";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Guncelle", "Satıs", FormMethod.Post))
{
<div class="form-group">
    @Html.LabelFor(m => m.satisid)
    @Html.TextBoxFor(m => m.satisid, new { @class = "form-control" })
    <br />
    @Html.LabelFor(m => m.urunid)
    @Html.TextBoxFor(m => m.urunid, new { @class = "form-control" })
    <br />
    @Html.LabelFor(m => m.musteriid)
    @Html.TextBoxFor(m => m.musteriid, new { @class = "form-control" })
    <br />
    @Html.LabelFor(m => m.adet)
    @Html.TextBoxFor(m => m.adet, new { @class = "form-control" })
    <br />
    @Html.LabelFor(m => m.fiyat)
    @Html.TextBoxFor(m => m.fiyat, new { @class = "form-control" })
</div>

    <div>
        <button class="btn btn-warning">Satış Güncelle</button>
    </div>
}
